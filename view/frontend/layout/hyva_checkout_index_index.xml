<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main">
            <block
                name="yireo_googletagmanager2.hyva_checkout.data-layer.component"
                template="Yireo_GoogleTagManager2::hyva_checkout/data-layer.phtml"
                ifconfig="googletagmanager2/settings/enabled">
                <arguments>
                    <argument name="magewire" xsi:type="object">Yireo\GoogleTagManager2\MageWire\Checkout</argument>
                </arguments>
            </block>

            <block
                name="yireo_googletagmanager2.hyva_checkout.data-layer.outer"
                class="Yireo\GoogleTagManager2\Block\InlineScriptParent"
                ifconfig="googletagmanager2/settings/enabled"
                after="yireo_googletagmanager2.pusher-script.outer"
            >
                <block
                    name="yireo_googletagmanager2.hyva_checkout.data-layer.script"
                    as="inner"
                    template="Yireo_GoogleTagManager2::hyva_checkout/data-layer-script.phtml">
                    <arguments>
                        <argument name="begin_checkout_event" xsi:type="object">
                            Yireo\GoogleTagManager2\DataLayer\Event\BeginCheckout
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
