<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="yireo_googletagmanager2.data-layer">
            <arguments>
                <argument name="data_layer" xsi:type="array">
                    <!-- @todo: https://developers.google.com/analytics/devguides/collection/ua/gtm/enhanced-ecommerce -->
                    <item name="ecommerce" xsi:type="array">
                        <item name="detail" xsi:type="array">
                            <item name="actionField" xsi:type="array">
                                <item name="list" xsi:type="string">
                                    Yireo\GoogleTagManager2\DataLayer\Tag\Product\CurrentProduct::getCategoryName
                                </item>
                            </item>
                            <item name="products" xsi:type="array">
                                <item name="0" xsi:type="array">
                                    <item name="id" xsi:type="string">Yireo\GoogleTagManager2\DataLayer\Tag\Product\CurrentProduct::getId</item>
                                    <item name="name" xsi:type="string">Yireo\GoogleTagManager2\DataLayer\Tag\Product\CurrentProduct::getName</item>
                                    <item name="sku" xsi:type="string">Yireo\GoogleTagManager2\DataLayer\Tag\Product\CurrentProduct::getSku</item>
                                    <item name="price" xsi:type="string">Yireo\GoogleTagManager2\DataLayer\Tag\Product\CurrentProduct::getPrice</item>
                                    <item name="category" xsi:type="string">Yireo\GoogleTagManager2\DataLayer\Tag\Product\CurrentProduct::getCategoryName</item>

                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
