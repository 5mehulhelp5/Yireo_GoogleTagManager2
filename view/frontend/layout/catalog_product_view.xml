<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="yireo_googletagmanager2.data-layer">
            <arguments>
                <argument name="data_layer_processors" xsi:type="array">
                    <item name="product" xsi:type="object">Yireo\GoogleTagManager2\DataLayerProcessor\Product</item>
                </argument>
                <argument name="data_layer" xsi:type="array">
                    <item name="event" xsi:type="string">productImpression</item>
                    <item name="page" xsi:type="array">
                        <item name="type" xsi:type="string">product</item>
                    </item>
                    <item name="productId" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Product\CurrentProductId</item>
                    <item name="productName" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Product\CurrentProductName</item>
                    <item name="google_tag_params" xsi:type="array">
                        <item name="ecomm_category" xsi:type="array">
                            <item name="current_category" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Category\CurrentCategoryName</item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
