<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="yireo_googletagmanager2.data-layer">
            <arguments>
                <argument name="data_layer_processors" xsi:type="array">
                    <item name="cart" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Processor\Cart</item>
                </argument>

                <argument name="data_layer" xsi:type="array">
                    <item name="event" xsi:type="string">view_cart</item>
                    <item name="ecommerce" xsi:type="array">
                        <item name="items" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Cart\CartItems</item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
