<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="yireo_googletagmanager2.data-layer">
            <arguments>
                <argument name="data_layer_processors" xsi:type="array">
                    <item name="category" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Processor\Category</item>
                </argument>
                <argument name="data_layer" xsi:type="array">
                    <item name="event" xsi:type="string">productImpression</item>
                    <item name="page" xsi:type="array">
                        <item name="type" xsi:type="string">category</item>
                    </item>
                    <item name="category" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Category\VirtualCurrentCategoryWithCategoryPrefix</item>
                    <item name="categorySize" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Category\CategorySize</item>
                    <item name="products" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Category\Products</item>
                    <item name="ecommerce" xsi:type="array">
                        <item name="impressions" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Category\Products</item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
