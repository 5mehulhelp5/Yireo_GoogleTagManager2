<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="googletagmanager_container">
            <block class="Magento\Framework\View\Element\Template"
                   name="googletagmanager_category"
                   before="googletagmanager_main_script"
                   template="Yireo_GoogleTagManager2::category.phtml"
                   ifconfig="googletagmanager2/settings/enabled">
                <arguments>
                    <argument name="category_view_model" xsi:type="object">
                        Yireo\GoogleTagManager2\Api\CategoryViewModelInterface
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
