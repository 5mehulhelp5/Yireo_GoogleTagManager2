<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="datalayer_default"/>

    <body>
        <referenceContainer name="before.body.end">
            <block
                name="yireo_googletagmanager2.data-layer"
                template="Yireo_GoogleTagManager2::data-layer.phtml"
                ifconfig="googletagmanager2/settings/enabled"
            >
                <arguments>
                    <argument name="data_layer_view_model" xsi:type="object">Yireo\GoogleTagManager2\ViewModel\DataLayer</argument>
                    <argument name="config" xsi:type="object">Yireo\GoogleTagManager2\Config\Config</argument>

                    <argument name="data_layer_processors" xsi:type="array">
                        <item name="ecommerce" xsi:type="object">Yireo\GoogleTagManager2\DataLayerProcessor\Ecommerce</item>
                    </argument>

                    <argument name="data_layer" xsi:type="array">
                        <!--
                        @todo: Are these needed?
                        <item name="accountId" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\AccountId</item>
                        <item name="liveOnly" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\LiveOnly</item>
                        -->
                        <item name="version" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Version</item>
                        <item name="event" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Event</item>
                        <item name="pageType" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\PageType</item>
                        <item name="page" xsi:type="array">
                            <item name="virtual_page" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Page\VirtualPage</item>
                            <item name="breadcrumb" xsi:type="object">Yireo\GoogleTagManager2\DataLayer\Tag\Page\Breadcrumbs</item>
                        </item>
                        <item name="user" xsi:type="array">
                            <item name="has_transacted" xsi:type="boolean">false</item>
                        </item>
                    </argument>
                </arguments>
            </block>

            <block
                name="yireo_googletagmanager2.script-main"
                template="Yireo_GoogleTagManager2::luma/script-main.phtml"
                ifconfig="googletagmanager2/settings/enabled"
            >
                <arguments>
                    <argument name="data_layer_view_model" xsi:type="object">Yireo\GoogleTagManager2\ViewModel\DataLayer</argument>
                    <argument name="commons_view_model" xsi:type="object">Yireo\GoogleTagManager2\ViewModel\Commons</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
